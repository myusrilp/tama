<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".option.ActivityGameOption"
    android:orientation="vertical"
    android:background="@drawable/layout2">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageButton
                android:layout_margin="10dp"
                android:id="@+id/imgTebakGambar"
                android:layout_width="0dp"
                android:layout_height="150dp"
                android:layout_weight="4"
                android:background="@drawable/tebakgambar"/>
            <ImageButton
                android:layout_margin="10dp"
                android:id="@+id/imgBerhitung"
                android:layout_width="0dp"
                android:layout_weight="4"
                android:layout_height="150dp"
                android:background="@drawable/berhitung"/>
        </LinearLayout>

        <ImageButton
            android:layout_margin="10dp"
            android:id="@+id/imgKenalHuruf"
            android:layout_width="195dp"
            android:layout_height="150dp"
            android:layout_gravity="center"
            android:background="@drawable/huruf"/>
    </LinearLayout>

</RelativeLayout>