<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".game.ActivityTebakGambar"
    android:orientation="horizontal"
    android:background="@drawable/layout6">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">
            <ImageButton
                android:id="@+id/imgHewan"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="200dp"
                android:background="@drawable/lion"/>
            <ImageButton
                android:id="@+id/imgBuah"
                android:layout_width="0dp"
                android:layout_height="200dp"
                android:layout_weight="5"
                android:background="@drawable/fruit" />

            <ImageButton
                android:id="@+id/imgInstrumen"
                android:layout_width="0dp"
                android:layout_weight="5"
                android:layout_height="200dp"
                android:background="@drawable/musicalinstrument"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">


        </LinearLayout>

    </LinearLayout>



</LinearLayout>